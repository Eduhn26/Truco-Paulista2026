// Prisma schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // URL vem do prisma.config.ts (env('DATABASE_URL'))
  // e/ou do ambiente em runtime (dotenv)
}

model Match {
  id          String   @id @default(cuid())
  pointsToWin Int
  state       String
  data        Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
